<root>
    <MainEnvironment>  <!-- Тег, обозначающий среду симуляции -->
        <Environment>  <!-- Тег, обозначающий компонент-контейнер -->
            <Properties> <!-- Тег, обозначающий свойстав компонента -->
                <x>0</x> <!-- Координата X компонента -->
                <y>0</y> <!-- Координата Y компонента -->
                <width>600</width> <!-- Ширина компонента -->
                <height>500</height> <!-- Высота компонента -->
                <name>MainEnvironment</name> <!-- Уникальное имя компонента -->
            </Properties>

            <!-- Тег, обозначающий компонент, входящий в компонент-контейнер -->
            <Element>SimGetVariable <!-- Значение "SimGetVariable" есть название класса компонента -->
                <Properties>
                    <x>148</x>
                    <y>97</y>
                    <width>50</width>
                    <height>50</height>
                    <name>SimGetVariable_1</name>
                    <!-- Свойство, которое было помечено декоратором "sim_property" и имеющиее значение "a" -->
                    <variable>a</variable>
                </Properties>
            </Element>

            <Element>SimConst
                <Properties>
                    <x>152</x>
                    <y>213</y>
                    <width>50</width>
                    <height>50</height>
                    <name>SimConst_1</name>
                    <value>1.0</value>
                </Properties>
            </Element>

            <Element>SimAdd
                <Properties>
                    <x>260</x>
                    <y>158</y>
                    <width>50</width>
                    <height>50</height>
                    <name>SimAdd_1</name>
                    <signs>++</signs>
                </Properties>
            </Element>

            <Element>SimSetVariable
                <Properties>
                    <x>399</x>
                    <y>158</y>
                    <width>50</width>
                    <height>50</height>
                    <name>SimSetVariable_1</name>
                    <variable>b</variable>
                </Properties>
            </Element>

            <!-- Тег, обозначающий соединение -->
            <Connection>
                <SimBox> <!-- Тег, обозначающий прямоугольную область -->
                    <x>191</x> <!-- Несмотря на название, обозначает координату X начала соединения -->
                    <y>131</y> <!-- Обозначает координату Y начала соединения -->
                    <width>258</width> <!-- Обозначает координату X конца соединения -->
                    <height>171</height> <!-- Обозначает координату Y конца соединения -->
                </SimBox>
                <StartSocket> <!-- Тег, обозначающий выходной сокет соединения -->
                    <name>SimGetVariable_1</name> <!-- Тег, обозначающий уникальное имя соединяемого компонента -->
                    <index>0</index> <!-- Тег, обозначающий индекс сокета соединяемого компонента -->
                </StartSocket>
                <EndSocket> <!-- Тег, обозначающий входной сокет соединения -->
                    <name>SimAdd_1</name>
                    <index>0</index>
                </EndSocket>
            </Connection>

            <Connection>
                <SimBox>
                    <x>193</x>
                    <y>229</y>
                    <width>262</width>
                    <height>188</height>
                </SimBox>
                <StartSocket>
                    <name>SimConst_1</name>
                    <index>0</index>
                </StartSocket>
                <EndSocket>
                    <name>SimAdd_1</name>
                    <index>1</index>
                </EndSocket>
            </Connection>

            <Connection>
                <SimBox>
                    <x>312</x>
                    <y>180</y>
                    <width>395</width>
                    <height>195</height>
                </SimBox>
                <StartSocket>
                    <name>SimAdd_1</name>
                    <index>2</index>
                </StartSocket>
                <EndSocket>
                    <name>SimSetVariable_1</name>
                    <index>0</index>
                </EndSocket>
            </Connection>

        </Environment>
    </MainEnvironment>
</root>